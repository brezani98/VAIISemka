@model List<VAIISemka.Models.Post>
@{
    ViewData["Title"] = "Posts";
}

<div class="text-center">
    @for (int i = 0; i < Model.Count; i++)
    {
    <div>
        <h4>@Model[i].Header</h4>
        <p>
            @Model[i].Body
        </p>
        <img src="~/images/@Model[i].ThumbnailImage" width="100" class="img-thumbnail img-fluid" alt="Obrázok článku">
    </div>
    }
</div>